<%- include('layouts/header.ejs') %>
<div class="p-4">
    <div class="container grid">
      <div class="row">
        <div class="col-md-5 col-sm-6 col-lg-3 mx-auto">
          <div class="card-body p-1 formContainer d-grid">
            <h2 class="p-2 text-center mb-4 h4 bg-dark text-white" id="formHeading">Add user</h2>
            <form action = "/add" method = "post" id="add-form">
              <div class="form-group mt-3">
                <label class="mb-2" for="nama">Nama</label>
                <input class="form-control" id="nama" name="nama" required/>
              </div>
              <div class="form-group mt-3">
                <label class="mb-2" for="kode">Kode</label>
                <input class="form-control" id="kode" name="kode" placeholder="Kode Guru" required/>
              </div>
              <div class="form-group mt-3">
                <label class="mb-2" for="mapel">Mata Pelajaran</label>
                <input class="form-control" id="mapel" name="mapel" placeholder="Mata Pelajaran nya" required/>
              </div>
              <div class="mb-3 d-grid py-4">
                <input type="submit" value="Add User" name="submit" class="btn btn-primary btn-lg">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    </div>
