<%- include('layouts/header.ejs') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %> " role="alert">
                    <strong><%= message.message %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (users != '') { %>
                    <table class="table table-striped text-center my-3" id="table">
                        <thead>
                            <tr class="table-dark">
                                <th>Id</th>
                                <th>Nama</th>
                                <th>Kode</th>
                                <th>Mapel</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td><%= row.name %> </td>
                                    <td><%= row.kode %> </td>
                                    <td><%= row.mapel %> </td>
                                    <td>
                                        <a href="/edit/<% row._id %>" class="text-success">
                                            <i class="fas fa-edit fa-lg mx-1">
                                            </i></a>
                                        <a href="/delete/<% row._id %> " class="text-danger">
                                            <i class="fas fa-trash fa-lg mx-1">
                                            </i></a>
                                        </td>
                                    
                                </tr>                             
                            <% }) %>
                        </tbody>
                    </table>
                <% } else {%>
                    <h1 class="text-center text-secondary mt-5">No Users in Database</h1>
                <% } %> 
            </div>
        </div>
    </div>
</div>
<%- include('layouts/footer.ejs') %> 